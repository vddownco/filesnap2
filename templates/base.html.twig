<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% if disable_turbo_drive is defined and disable_turbo_drive == true %}
            <meta name="disable-turbo-drive">
        {% endif %}
        <title>filesnap / {% block page_title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {% block body_stimulus_controller %}{% endblock %}
            class="min-h-screen mx-auto flex flex-col overflow-x-hidden {% block body_classes %}bg-stone-50{% endblock %}"
    >
        {% block body %}{% endblock %}
    </body>
</html>